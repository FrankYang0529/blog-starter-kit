
<% permalink = config.url + config.root + post.path %>
<main class="content" role="main">
  <article class="post">
    <%- partial('post/meta') %>
    <h1 class="post-title"><%- post.title %></h1>
    <section class="post-content">
      <div class="fb-like" data-href="https://www.facebook.com/TechBridge.Fans" data-layout="button_count" data-action="like" data-show-faces="false" data-share="true"></div>   
      <hr>
      <%- post.content %>  
      <div class="fb-like" data-href="<%- url %>" data-layout="standard" data-action="like" data-show-faces="true" data-share="true"></div> 
      <br>
      <div class="sharethis-social-share-block">
        <span class='st_twitter_hcount' displayText='Tweet'></span>
        <span class='st_plusone_hcount' displayText='Google +1'></span>
        <span class='st_email_hcount' displayText='Email'></span>
      </div>
    </section>
    <br>
    <footer class="post-footer">
      <%- partial('post/author') %>
      <%- partial('post/share') %>
    </footer>
    <br>
  </article>
  <%- partial('post/navigation') %>
  <%- partial('post/comments') %>
</main>
