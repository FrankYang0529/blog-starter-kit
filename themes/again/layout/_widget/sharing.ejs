<div class="sharing grid">
  <section class="profile grid-item grid">
    <img class="avatar" src="<%- url_for(theme.avatar) %>" alt="avatar" />
    <div class="grid-item">
      <p class="title"> <%- theme.title %> </p>
      <p class="subtitle"> <%- theme.bio %> </p>
    <div>
  </section>
  <section class="share-btns">
    <p>追蹤技術日報，技術資訊不漏接！ </p>
    <div class="fb-like" data-href="https://www.facebook.com/TechBridge.Fans" data-layout="button_count" data-action="like" data-show-faces="false" data-share="true"></div>  
  </section>
</div>
